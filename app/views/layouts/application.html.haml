!!! 5
%html
  %head
    %title Austin Schneider
    %meta{:name => "viewport", :content => "user-scalable=no, width=device-width"}
    %meta{:name => "google-site-verification", :content => "A7MGIgDVZlzzNNPOeyI58UzHiQqbEU77zOW7Lr7hvLs"}
    = csrf_meta_tag
    %link{:rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}
    %link{:rel => "icon", :href => "/favicon.ico", :type => "image/x-icon"}
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = javascript_include_tag 'application'
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-21155751-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    #container
      #header
        #logo
          %h1= link_to "Austin Schneider", "/"
          #tag_line Web Developer &amp; Designeer
        -#status
          -# me = Twitter.user("austinthecoder")
          =# '"' + me.status.text + '"'
          =# "-".html_safe + link_to("austinthecoder", "http://twitter.com/austinthecoder")
      #menu
        %ul.menu
          %li= link_to "Projects", "/projects"
          %li= link_to "Get in touch", "/contact-me"
          %li= link_to "On the web", "/on-the-web"
        .clear
      #content
        = yield
      #root_footer
    #footer
      .inner
        .built_by
          Built by
          = link_to "Austin Schneider", "/"
          using
          = link_to("Ruby on Rails", "http://rubyonrails.org") + "."
        .view_source
          =# link_to("View the source code", "http://github.com/soccer022483/austinschneider") + "."
        .clear